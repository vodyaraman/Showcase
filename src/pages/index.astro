---
// Основа страницы
import BasePageLayout from '@/layouts/BasePageLayout.astro';
import Header from '@/components/header/Header.astro';

// Компоненты страницы
import { LinkButton, MainButton } from '@/components/buttons';
import { FormExamplePage } from '@/components/form';
import FormInput from '@/components/inputs/FormInput';

// Контент страница
import Card from '@/components/cards/Card';
import Skeleton from '@/components/skeleton/Skeleton';
---

<BasePageLayout title="Главная" description="Главная страница сайта" keywords="Ключевые слова">
	<Header />
	<section class="hero section">
		<h1>Лорем Ipsum</h1>
		<h2>Лорем Ipsum</h2>
		<h3>Лорем Ipsum</h3>
		<p>
			Lorem текст ipsum пример dolor примерный sit заголовок, consectetur контент adipiscing абзац
