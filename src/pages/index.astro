		<FormInput
			id="adress"
			type="adress"
			onChange={() => console.log('Изменился')}
			label="Adress"
			client:load
		/>

		<LinkButton s text="Перейти" href="/second" client:load />
		<LinkButton m loader text="Перейти" href="/second" className='outlined' client:load/>
		<LinkButton m text="Корзина" icon="cart" href='/' client:load />
		<MainButton text="Отключена" disabled={true} loading={false} client:load />
		<MainButton text="Нажать" loading={true} client:load />
		<LinkButton className="outlined" href="/" icon="instagram" text='Инстаграм' client:load />
